{
  "name": "silvie-bot",
  "version": "0.0.1",
  "description": "A Discord bot for the Grand Archive TCG.",
  "main": "dist/index.js",
  "author": "James Donnelly <2203377+JamesDonnelly@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "17.x",
    "yarn": "1.x"
  },
  "dependencies": {
    "@discordjs/rest": "^0.2.0-canary.0",
    "discord-api-types": "^0.26.1",
    "discord.js": "^13.5.1",
    "dotenv": "^11.0.0",
    "node-fetch": "^2.6.7",
    "node-html-markdown": "^1.1.3",
    "shx": "^0.3.4"
  },
  "devDependencies": {
    "typescript": "^4.5.4"
  },
  "scripts": {
    "build": "echo \"Silvie is pre-built using build-local.\"",
    "build-local": "yarn clean & yarn tsc --outDir ./dist & yarn build-api-data",
    "build-all": "yarn build-local & yarn deployCommands",
    "build-api-data": "shx cp -r ./src/api-data/ ./dist/",
    "clean": "shx rm -rf ./dist",
    "deployCommands": "node ./dist/deploy-commands.js",
    "scrape": "node ./dist/api-scrape.js",
    "start": "node .",
    "deploy": "git push heroku main",
    "generate-blog-templates": "echo \"Templates will be built in ./templates. Remember to move them once done.\" & node ./dist/blog/generate-blog-templates.js"
  },
  "bugs": {
    "url": "https://github.com/ItsSilvie/bot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ItsSilvie/bot.git"
  },
  "resolutions": {
    "minimist": "^1.2.6"
  },
  "homepage": "https://silvie.org"
}
